<h2>Save a video</h2>

<form class="form" action="/videos" method="post">
  <label>Title</label>
  <input id="title-input" name="title" maxlength="50" value="{{newVideo.title}}">
  {{#with newVideo.errors.title as |error|}}
  <span class="error" id="title-input-error">{{error.message}}</span><br>
  {{/with}}

  <label>Description</label>
  <textarea id="description-input" name="description">{{newVideo.description}}</textarea>
  {{#with newVideo.errors.description as |error|}}
  <span class="error" id="description-input-error">{{error.message}}</span><br>
  {{/with}}

  <label>URL</label>
  <input id="url-input" name="url" value="{{newVideo.url}}">
  {{#with newVideo.errors.url as |error|}}
  <span class="error" id="url-input-error">{{error.message}}</span><br>
  {{/with}}
  
  <button class="input-button" id="submit-button" type="submit">
    <p>Create new</p>
  </button>
</form>
